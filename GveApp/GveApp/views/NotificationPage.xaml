<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GveApp.views.NotificationPage"
             Title="Notifications">
    <ContentPage.Content>
        <StackLayout>
            <ListView  x:Name="list_des_notification"
                   IsGroupingEnabled="False">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <TextCell Text="{Binding Date}"
                              Detail="{Binding Message}" />
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>